<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <style>
        /* Basic styling */
        body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
    padding: 20px;
    text-align: center;
}

.container {
    background: #ffffff;
    padding: 25px;
    margin: 0 auto;
    width: 320px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    border-radius: 10px;
}

input {
    width: 100%;
    padding: 12px;
    margin: 12px 0;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-sizing: border-box;
    transition: border 0.3s ease;
}

input:focus {
    border-color: orange;
    outline: none;
    box-shadow: 0 0 8px rgba(255, 165, 0, 0.3);
}

button {
    padding: 12px 22px;
    background: linear-gradient(135deg, #ff9800, #f57c00);
    border: none;
    border-radius: 5px;
    color: #ffffff;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
}

button:hover {
    background: linear-gradient(135deg, #f57c00, #e65100);
    transform: translateY(-2px);
}

button:disabled {
    background: #ccc;
    cursor: not-allowed;
}

.toast {
    visibility: hidden;
    min-width: 280px;
    background: linear-gradient(135deg, #4caf50, #388e3c);
    color: white;
    text-align: center;
    border-radius: 8px;
    padding: 15px;
    position: fixed;
    z-index: 1;
    right: 30px;
    bottom: 30px;
    font-size: 16px;
}

.toast.show {
    visibility: visible;
    -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
    animation: fadein 0.5s, fadeout 0.5s 2.5s;
}

@-webkit-keyframes fadein {
    from {bottom: 0; opacity: 0;} 
    to {bottom: 30px; opacity: 1;}
}

@keyframes fadein {
    from {bottom: 0; opacity: 0;}
    to {bottom: 30px; opacity: 1;}
}

@-webkit-keyframes fadeout {
    from {bottom: 30px; opacity: 1;} 
    to {bottom: 0; opacity: 0;}
}

@keyframes fadeout {
    from {bottom: 30px; opacity: 1;}
    to {bottom: 0; opacity: 0;}
}

    </style>
</head>
<body>
    <div class="container">
        <h2>Forgot Password</h2>
        <form id="forgot-password-form" onsubmit="return false;">
            <input type="email" id="email" placeholder="Enter your email" required>
            <button type="button" onclick="sendOtp()">Submit</button>

            <div id="otp-section" style="display:none;">
                <input type="text" id="otp" placeholder="Enter OTP" required>
                <button type="button" onclick="verifyOtp()">Verify OTP</button>
            </div>

            <div id="password-section" style="display:none;">
                <input type="password" id="new-password" placeholder="New Password" required>
                <input type="password" id="confirm-password" placeholder="Confirm Password" required>
                <button type="button" onclick="savePassword()">Save</button>
            </div>
        </form>
    </div>

    <div id="toast" class="toast">Your password has been updated successfully!</div>

    <script>
        function sendOtp() {
            // Replace with actual OTP sending logic
            alert('OTP sent to ' + document.getElementById('email').value);
            document.getElementById('otp-section').style.display = 'block';
        }

        function verifyOtp() {
            // Replace with actual OTP verification logic
            const otp = document.getElementById('otp').value;
            if (otp === '123456') {  // Example OTP for demo purposes
                document.getElementById('password-section').style.display = 'block';
            } else {
                alert('Invalid OTP!');
            }
        }

        function savePassword() {
            const newPassword = document.getElementById('new-password').value;
            const confirmPassword = document.getElementById('confirm-password').value;

            if (newPassword === confirmPassword) {
                // Replace with actual password update logic
                document.getElementById('toast').classList.add('show');
                setTimeout(() => {
                    document.getElementById('toast').classList.remove('show');
                    window.location.href = '/';  // Redirect to home page after successful update
                }, 3000);
            } else {
                alert('Passwords do not match!');
            }
        }
    </script>
</body>
</html>
