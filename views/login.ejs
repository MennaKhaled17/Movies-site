   }
   .container {
      background: #ffffff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 500px;
      width: 100%;
      padding: 40px;
      text-align: center;
      position: relative;
      left: 450px;
      top: 90px;
    }
    .toast {
      visibility: hidden;
      max-width: 300px;
      margin: auto;
      background-color: #333;
      color: #fff;
      text-align: center;
      border-radius: 2px;
      position: fixed;
      z-index: 1;
      left: 0;
      right: 0;
      bottom: 30px;
      font-size: 17px;
      box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
    }
    .toast-show {
      visibility: visible;
      opacity: 1;
      transition: opacity 0.5s ease-in-out;
    }
    .toast-success {
      background-color: #4CAF50; /* Green */
    }
    .toast-error {
      background-color: #F44336; /* Red */
    }
    footer {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 20px 0;
      margin-top: 20px;
      position: absolute;
      top: 650px;
      width: 100%;
    }
    footer a {
      color: #d3d3d3;
      text-decoration: none;
    }
    footer a:hover {
      text-decoration: underline;
    }
  </style>
</head>
  
  </style>
