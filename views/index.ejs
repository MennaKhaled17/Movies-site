<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/main.css" />
  <link rel="icon" href="/imgs/Untitled_design-removebg-preview.png">
  <title>Movies</title>
</head>

<body>
  <nav class="navbar">
    <div class="navbar-top">
      <div class="logo">
        <img src="/imgs/Untitled_design-removebg-preview.png" alt="Logo" />
      </div>
      <form action="/search" method="GET">
        <input type="search" name="q" placeholder="Search" id="search-input" autocomplete="off" />
        <ul id="autocomplete-list"></ul>
        <button id="search-button">Go</button>
      </form>
      <button class="login-button" onclick="location.href='/Register';">Register</button>

      
      </div> 
      
      <!-- Navbar Bottom Section -->
      <div class="navbar-bottom">
        <ul class="navbar-links">
          <li><a href="/">Home</a></li>
          <li><a href="#">Genres</a></li>
          <li><a href="#">TV Series</a></li>
          <li><a href="#">News</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="movie-gallery">
    <% movies.forEach(movie => { %>
    <div class="movie-item">
        <div class="movie-poster">
            <a href="/details/<%= movie.id %>">
                <img src="<%= movie.poster_path ? 'https://image.tmdb.org/t/p/w200' + movie.poster_path : '/imgs/default.png' %>" alt="<%= movie.title %> poster" />
            </a>
        </div>
        <div class="movie-details">
            <h2><%= movie.title %></h2>
            <p>Release Date: <%= movie.release_date %></p>
            <p class="overview"><%= movie.overview %></p>
        </div>
    </div>
    <% }); %>
</div>

  <% if(query != 0) { %>
    <div class="pagination">
      <button class="page-button" id="first" onclick="location.href='/search?q=<%= query %>&page=1'">First</button>
      <button class="page-button" id="previous" onclick="location.href='/search?q=<%= query %>&page=<%= page - 1 > 0 ? page - 1 : 1 %>'">Previous</button>
      <button class="page-button" id="next" onclick="location.href='/search?q=<%= query %>&page=<%= page + 1 <= totalPages ? page + 1 : totalPages %>'">Next</button>
      <button class="page-button" id="last" onclick="location.href='/search?q=<%= query %>&page=<%= totalPages %>'">Last</button>
    </div>
  <% } %>

  <% if(totalMovies) { %>
    <div class="total-movies">
      <p>Total Movies Found: <%= totalMovies %></p>
    </div>
  <% } %>

  <%- include('./partials/footer.ejs') %>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const searchInput = document.getElementById('search-input');
      const autocompleteList = document.getElementById('autocomplete-list');

      searchInput.addEventListener('input', async () => {
        const query = searchInput.value;
        if (query.length < 3) {
          autocompleteList.innerHTML = '';
          return;
        }

        try {
          const response = await fetch(`/autocomplete?q=${query}`);
          const movies = await response.json();

          autocompleteList.innerHTML = '';
          movies.forEach(movie => {
            const li = document.createElement('li');
            li.textContent = movie.title;
            li.addEventListener('click', () => {
              searchInput.value = movie.title;
              autocompleteList.innerHTML = '';
              document.querySelector('form').submit();
            });
            autocompleteList.appendChild(li);
          });
        } catch (error) {
          console.error('Error fetching autocomplete suggestions:', error);
        }
      });

      document.addEventListener('click', (e) => {
        if (!autocompleteList.contains(e.target) && e.target !== searchInput) {
          autocompleteList.innerHTML = '';
        }
      });
    });
  </script>
</body>

</html>
